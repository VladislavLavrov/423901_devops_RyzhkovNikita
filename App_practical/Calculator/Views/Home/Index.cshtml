@model CalculatorApp.Models.CalculatorModel

@{
    ViewData["Title"] = "Калькулятор";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center">Калькулятор</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Calculate" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="FirstNumber" class="form-label">Первое число:</label>
                            <input asp-for="FirstNumber" class="form-control" type="number" step="any" required />
                            <span asp-validation-for="FirstNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Operation" class="form-label">Операция:</label>
                            <select asp-for="Operation" class="form-select">
                                <option value="+">Сложение (+)</option>
                                <option value="-">Вычитание (-)</option>
                                <option value="*">Умножение (*)</option>
                                <option value="/">Деление (/)</option>
                                <option value="^">Возведение в степень (^)</option>
                                <option value="sqrt">Квадратный корень (√)</option>
                            </select>
                        </div>

                        <div class="form-group mb-3" id="secondNumberGroup">
                            <label asp-for="SecondNumber" class="form-label">Второе число:</label>
                            <input asp-for="SecondNumber" class="form-control" type="number" step="any" />
                            <span asp-validation-for="SecondNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-success w-100">Вычислить</button>
                        </div>
                    </form>

                    @if (Model.Result != 0 || !string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert @(string.IsNullOrEmpty(Model.ErrorMessage) ? "alert-success" : "alert-danger") mt-3">
                            @if (string.IsNullOrEmpty(Model.ErrorMessage))
                            {
                                <h5>Результат: @Model.Result</h5>
                            }
                            else
                            {
                                <h5>Ошибка: @Model.ErrorMessage</h5>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- История вычислений -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="text-center">История вычислений</h5>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    @if (Model.History != null && Model.History.Any())
                    {
                        <div class="list-group">
                            @foreach (var item in Model.History)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            @if (item.Operation == "sqrt")
                                            {
                                                <text>√@item.Operand1 = @item.Result</text>
                                            }
                                            else
                                            {
                                                <text>@item.Operand1 @item.Operation @item.Operand2 = @item.Result</text>
                                            }
                                        </h6>
                                        <small>@item.CreatedAt.ToLocalTime().ToString("g")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">История вычислений пуста</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const operationSelect = document.getElementById('Operation');
            const secondNumberGroup = document.getElementById('secondNumberGroup');

            function toggleSecondNumber() {
                if (operationSelect.value === 'sqrt') {
                    secondNumberGroup.style.display = 'none';
                } else {
                    secondNumberGroup.style.display = 'block';
                }
            }

            operationSelect.addEventListener('change', toggleSecondNumber);
            toggleSecondNumber();
        });
    </script>
}